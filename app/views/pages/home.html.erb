<!-- Hero -->
<div class="hero card-box">
    <div class="container">
      <div class="w-layout-grid hero-grid">
        <div class="hero-content">
          <h1 class="heading card-title" id="main-h1">Learn anything online with ease.</h1>
          <p class="hero-paragraph">Learn anything on YouTube easily with Unotes, a toolbox made to help you become a better and more efficient student.</p>
          <a href="#" class="button w-button">Get Started</a>
          <div class="avatar-wrap">
            <div class="avatar"><%= image_tag 'eric.png', class:'image' %></div>
            <div class="avatar avatar-02"><%= image_tag 'chris.png', class:'image' %></div>
            <div class="avatar avatar-03"><%= image_tag 'tamara.png', class:'image' %></div>
            <div class="text-block">Join over <span class="text-span">4,000+</span> students</div>
          </div>
        </div>
        <div class="video-block">
          <a href="#" class="video-link w-inline-block w-lightbox"><%= image_tag 'Triangle.svg', class:'video-icon' %>
          </a>
        </div>
      </div>
    </div>
    <div class="bg-shape-80"></div>
    <div class="bg-shape-40"></div>
  </div>


<!--JS Code for Animations-->
<script>
  // ScrollReveal (https://github.com/jlmakes/scrollreveal)

(function scrollReveal() {
  window.sr = ScrollReveal();
  
  sr.reveal('.card-box', {
    duration   : 600,
    distance   : '20px',
    easing     : 'ease-out',
    origin     : 'bottom',
    reset      : true,
    scale      : 1,
    viewFactor : 0,
    afterReveal  : revealChildren,
  }, 150);
  
    var revealChildren = sr.reveal('.card-title, .card-text', {
    duration   : 500,
    scale      : 1,
    distance   : '20px',
    origin     : 'bottom',
    reset      : true,
    easing     : 'ease-out',
    viewFactor : 1,
  }, 75);
})();

</script>
<!--JS Code for Animations END-->
